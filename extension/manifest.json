{
  "manifest_version": 3,
  "name": "VibeCheck Companion",
  "version": "3.0.0",
  "permissions": [
    "scripting",
    "activeTab",
    "cookies"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_title": "VibeCheck",
    "default_icon": "public/vite.svg"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "vibecheck@gemini.hackathon",
      "strict_min_version": "109.0",
      "data_collection_permissions": {
        "required": [
          "websiteActivity",
          "websiteContent"
        ]
      }
    }
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src 'self' http://localhost:5000 ws://localhost:5000 http://localhost:3000 https://* wss://*;"
  },
  "background": {
    "scripts": [
      "src/background.ts"
    ],
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "src/content.ts"
      ]
    }
  ]
}